<p id="notice"><%= notice %></p>

<h1>
  <%= image_tag @user.avatar.url(:medium), class: "circle responsive-img" %>
</h1>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
<div class="row">
  <%= link_to following_user_path @user do %>
    <div id="following-count" class="col s1 waves-effect waves-light white blue-text"><%= @user.following.count %> following</div>
  <% end %>
  <%= link_to followers_user_path @user do %>
    <div id="follower-count" class="col s1 waves-effect waves-light white blue-text"><%= @user.followers.count %> followers</div>
  <% end %>
</div>


<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

  <%= render 'follow_form' if logged_in? %>

<% if current_user == @user %>
  <%= link_to 'New Post', new_user_post_path(@user) %>
<% end %>



<h1>Posts</h1>



<div class="col s12">
  <div class="row">
   <% @user.posts.each do |post| %>

     <%= link_to user_post_path(@user, post) do %>
       <div class="col s3">
         <%= image_tag post.avatar.url(:medium) %><br>

         <% end %>

       </div>
     <% end %>
  </div>
</div>









