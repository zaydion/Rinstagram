<p id="notice"><%= notice %></p>

<h1>
  <%= image_tag @user.avatar.url(:medium) %>
  <%= @user.name %>
</h1>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>



<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path(@user) %>

  <tbody>
    <% @user.posts.each do |post| %>
      <tr>
        <td><%= image_tag post.avatar.url(:medium) %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.user.name %></td>
        <td><%= link_to 'Show', user_post_path(@user, post) %></td>
        <% if current_user == @user %>
          <td><%= link_to 'Edit', edit_user_post_path(@user, post) %></td>
          <td><%= link_to 'Destroy', user_post_path(@user, post), method: :delete %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user == @user %>
  <%= link_to 'New Post', new_user_post_path(@user) %>
<% end %>





