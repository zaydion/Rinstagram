<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.avatar.url(:medium) %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.user.name %></td>
        <td><%= link_to 'Show', user_post_path(post.user, post) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if !@user.nil? && current_user == @user %>
  <%= link_to 'New Post', new_user_post_path(@user) %>
<% end %>
